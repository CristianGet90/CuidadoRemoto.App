@page
@model CuidadoRemoto.Frontend.FormVisitaModel
@{

    <html>

    <head>
        <link rel="stylesheet" href="FormVisita.cshtml"/>
        <link rel="stylesheet" href="site.css" />

    </head>

    <body>
        <div>

     
        <h2 class="tituloPropietario"> INGRESE DATOS DE LA VISITA </h2>

             <table class="tableFormularios">
            @foreach (var formulario in Model.ListaDatosVisita)
            {
                <tr>
                    <td>@formulario</td>
                </tr>

                <td>
                    <form>
                        <!-- Etiqueta del texto -->
                        <labe for="fecha">Fecha de visita</labe>
                        <!-- campo de texto -->
                        <input type="text" fecha="fecha" />
                        
                    </form>
                </td>

                <td>
                    <form>
                        <labe for="numVisita">Numero de visita</labe>
                        <input type="text" numVisita="numVisita" />
                    </form>
                </td>
                
            }
            
        </table>
        <div class="botonescrud">
            <button type="submit">Guardar</button>
            <button type="submit">Editar</button>
            <button type="submit">Buscar</button>
            <button type="submit">Eliminar</button>
        <section class="registrarBovino">
            
             <ul>
                
                    <a href="FormVisita">
                        <!-- <button type="submit">Registrar su Bovino</button> -->
                        
                        <input class="boton w-sm-100" type="submit" value="Registrar Historia clinica">

                        
                    </a>

            </ul>
                
        </section>
        </div>
      

       

        </div>
        
    </body>

    </html>
}
