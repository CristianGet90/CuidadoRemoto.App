@page
@model CuidadoRemoto.Frontend.FormBovinoModel
@{
<html>
    <body>
        <h2 class="titiloBovino">INGRESE DATOS DEL BOVINO</h2>

            <table class="tableFormularios">
            @foreach (var formulario in Model.ListaDatosBovinos)
            {
                <tr>
                    <td>@formulario</td>
                </tr>

                <td>
                    <form>
                        <!-- Etiqueta del texto -->
                        <labe for="codigo">CODIGO</labe>
                        <!-- campo de texto -->
                        <input type="text" codigo="codigo" />
                        
                    </form>
                </td>

                <td>
                    <form>
                        <labe for="nombre">NOMBRE</labe>
                        <input type="text" nombre="nombre" />

                    </form>
                </td>

                <td>
                    <form>
                        <labe for="color">COLOR</labe>
                        <input type="text" color="color" />
                
                    </form>
                </td>
                

         

                 <td>
                    <form>
                        <labe for="especie">ESPECIE</labe>
                        <input type="text" especie="especie" />
                        
                    </form>
                </td>

                <td>
                    <form>
                        <labe for="raza">RAZA</labe>
                        <input type="text" raza="raza" />
    
                    </form>
                </td>
                <td>
                    <form>
                        <labe for="edad">EDAD</labe>
                        <input type="text" edad="edad" />
                       
                    </form>
                </td>
            }
            
            
           
        </table>

            <div class="botonescrud">
            <button type="submit">Guardar</button>
            <button type="submit">Editar</button>
            <button type="submit">Buscar</button>
            <button type="submit">Eliminar</button>
        <section class="ListarBovinos">
            
             <ul>
                    <a href=" ojo falta el link">
                        <!-- <button type="submit">Registrar su Bovino</button> -->
                        
                        <input class="boton w-sm-100" type="submit" value="ListarBovinos">
                        
                    </a>


            </ul>
        
    </body>
</html>
    

            

}
